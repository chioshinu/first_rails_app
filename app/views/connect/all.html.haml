#wrapper
  #header
    .div-container
      .logo
        %h1
          %a{:href=>'/'}
            %img{:src=>'/images/logo.png'}
      .user-menu
        .user-info
          .user-menu-avatar
            %img{:src=>'/images/no_avatar.png'}
          .user-menu-username Head Admin
          %ul.sub-menu-admin
            %li
              %a.with-border{:href=>'#'} Edit Profile
            %li
              %a{:href=>'#'} Logout
            %li
              %a{:href=>'#'} System Connections
      .header-menu
        %ul#menu
          %li#home-page
            %a{:href=>'#'} Home
          %li#convene
            %a{:href=>'#'} Convene
          %li#connect.active
            %a{:href=>'#'} Connect
          %li#collaborate
            %a{:href=>'#'} Collaborate
          %li#careers
            %a{:href=>'#'} Careers
  #main-content
    .div-container
      .facebook-refresh
        .message Please refresh permissions for system Facebook connection
        .refresh-button
          %a{:id=>'facebook-connect', :href=>'#'} Refresh
      .connect-content
        %h2 Connect with other VX members
        #filter
          .filter-block
            %h3 Member filter
            %ul.member-filter-links
              %li
                %a{:href=>'#'} New members
              %li
                %a{:href=>'#'} Recently viewed
              %li
                %a{:href=>'#'} Followed people
              %form{:method=>'post', :action=>''}
                %fieldset.member-filter
                  %ul
                    %li
                      %input#connect_filter_name{:name=>'connect_filter[name]', :type=>'text', :placeholder=>'Name...'}
                %input.search-button{:type=>'submit', :value=>'Apply filters'}
              %a.reset-filter{:href=>'#'} Reset Filter
          %a#invite-member{:href=>'#'} Invite member
          %a#new-member{:href=>'#'} Add new member
        #right
        #content

  #footer